print("Building the System Directory!")
sleep(3)
fs.makeDir("//.system")
fs.makeDir("/apps")
fs.makeDir("/home")
fs.makeDir("/home/root")
fs.makeDir("//.system/apis")
term.setBackgroundColor(colors.white)
term.setTextColor(colors.black)
shell.run("pastebin", "get", "DLT8CKtn", "//.system/git")
shell.run("alias", "git", "//.system/git")
shell.run("git", "get", "thegreatstudio", "isaax", "master", "14/apis/git", "//.system/git")
os.loadAPI("//.system/apis/git")
git.get('thegreatstudio', 'isaax', 'master', '14/.system/linux', '//.system/linux')

git.get('thegreatstudio', 'isaax', 'master', '14/.system/install.lua', '//.system/install.lua')

